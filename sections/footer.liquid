<footer style="background-color:#111; color:#f2f2f2; padding:3rem 1.5rem; font-family:'Poppins', sans-serif;">
  <div style="max-width:1200px; margin:0 auto; display:flex; flex-wrap:wrap; justify-content:space-between; align-items:center; gap:2rem; text-align:center;">

    <div style="flex:1 1 250px; text-align:left;">
      {% if section.settings.company_logo != blank %}
        <img src="{{ section.settings.company_logo | image_url: width: 180 }}" alt="Logo da empresa" style="max-width:180px; height:auto; margin-bottom:1.2rem;">
      {% endif %}
      <p style="margin:0.3rem 0; color:#ccc;">{{ section.settings.company_address }}</p>
      <p style="margin:0.3rem 0;">
        <a href="tel:{{ section.settings.company_phone }}" style="color:#ccc; text-decoration:none;">{{ section.settings.company_phone }}</a>
      </p>
      <p style="margin:0.3rem 0;">
        <a href="mailto:{{ section.settings.company_email }}" style="color:#ccc; text-decoration:none;">{{ section.settings.company_email }}</a>
      </p>
    </div>

    <div style="flex:1 1 200px; text-align:right;">
      <div style="display:flex; justify-content:flex-end; gap:1.2rem; align-items:center;">
        {% if section.settings.facebook_url != blank %}
          <a href="{{ section.settings.facebook_url }}" target="_blank" rel="noopener" style="color:#f2f2f2; text-decoration:none;">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="#f2f2f2" viewBox="0 0 24 24"><path d="M22.675 0h-21.35C.597 0 0 .597 0 1.326v21.348C0 23.403.597 24 1.326 24H12.82v-9.294H9.692V11.41h3.128V8.807c0-3.1 1.893-4.788 4.659-4.788 1.325 0 2.463.099 2.795.143v3.24l-1.919.001c-1.504 0-1.796.715-1.796 1.763v2.309h3.587l-.467 3.296h-3.12V24h6.116C23.403 24 24 23.403 24 22.674V1.326C24 .597 23.403 0 22.675 0z"/></svg>
          </a>
        {% endif %}
        {% if section.settings.instagram_url != blank %}
          <a href="{{ section.settings.instagram_url }}" target="_blank" rel="noopener" style="color:#f2f2f2; text-decoration:none;">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="#f2f2f2" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 1.366.062 2.633.334 3.608 1.31.975.976 1.248 2.243 1.31 3.609.058 1.265.069 1.645.069 4.848s-.011 3.584-.069 4.849c-.062 1.366-.335 2.633-1.31 3.608-.975.975-2.242 1.248-3.608 1.31-1.266.058-1.646.069-4.85.069s-3.584-.011-4.849-.069c-1.366-.062-2.633-.335-3.609-1.31-.975-.975-1.247-2.242-1.309-3.608C2.175 15.584 2.163 15.204 2.163 12s.012-3.583.07-4.849c.062-1.366.334-2.633 1.309-3.609.976-.975 2.243-1.248 3.609-1.31C8.416 2.175 8.796 2.163 12 2.163zm0 1.838c-3.18 0-3.563.012-4.82.07-1.064.049-1.64.228-2.022.384-.509.197-.873.433-1.256.816-.383.383-.619.747-.816 1.256-.156.382-.335.958-.384 2.022-.058 1.257-.07 1.64-.07 4.82s.012 3.563.07 4.82c.049 1.064.228 1.64.384 2.022.197.509.433.873.816 1.256.383.383.747.619 1.256.816.382.156.958.335 2.022.384 1.257.058 1.64.07 4.82.07s3.563-.012 4.82-.07c1.064-.049 1.64-.228 2.022-.384.509-.197.873-.433 1.256-.816.383-.383.619-.747.816-1.256.156-.382.335-.958.384-2.022.058-1.257.07-1.64.07-4.82s-.012-3.563-.07-4.82c-.049-1.064-.228-1.64-.384-2.022-.197-.509-.433-.873-.816-1.256-.383-.383-.747-.619-1.256-.816-.382-.156-.958-.335-2.022-.384-1.257-.058-1.64-.07-4.82-.07zm0 3.838a5.999 5.999 0 1 1 0 11.998 5.999 5.999 0 0 1 0-11.998zm0 9.9a3.9 3.9 0 1 0 0-7.8 3.9 3.9 0 0 0 0 7.8zm6.406-10.845a1.44 1.44 0 1 1 0-2.88 1.44 1.44 0 0 1 0 2.88z"/></svg>
          </a>
        {% endif %}
        {% if section.settings.linkedin_url != blank %}
          <a href="{{ section.settings.linkedin_url }}" target="_blank" rel="noopener" style="color:#f2f2f2; text-decoration:none;">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="#f2f2f2" viewBox="0 0 24 24"><path d="M19 0h-14C2.239 0 0 2.239 0 5v14c0 2.761 2.239 5 5 5h14c2.761 0 5-2.239 5-5V5c0-2.761-2.239-5-5-5zm-9 19H7v-9h3v9zm-1.5-10.271a1.732 1.732 0 1 1 0-3.463 1.732 1.732 0 0 1 0 3.463zM20 19h-3v-4.5c0-1.121-.879-2-2-2s-2 .879-2 2V19h-3v-9h3v1.209C13.407 10.082 14.667 9 16.5 9 18.981 9 20 10.775 20 13.5V19z"/></svg>
          </a>
        {% endif %}
      </div>
    </div>
  </div>

  <div style="border-top:1px solid rgba(255,255,255,0.1); margin-top:2rem; padding-top:1rem; text-align:center; font-size:0.85rem; color:#aaa;">
    {{ section.settings.copyright_text }}
  </div>
</footer>

{% schema %}
{
  "name": "Raviolli Press Footer",
  "settings": [
    { "type": "image_picker", "id": "company_logo", "label": "Logo da empresa" },
    { "type": "text", "id": "company_address", "label": "Endereço", "default": "Rua das Artes, 123 - Itapema, SC" },
    { "type": "text", "id": "company_phone", "label": "Telefone", "default": "+55 (47) 99999-9999" },
    { "type": "text", "id": "company_email", "label": "E-mail", "default": "contato@raviollipress.com" },
    { "type": "url", "id": "facebook_url", "label": "Facebook", "default": "/" },
    { "type": "url", "id": "instagram_url", "label": "Instagram", "default": "/" },
    { "type": "url", "id": "linkedin_url", "label": "LinkedIn", "default": "/" },
    { "type": "text", "id": "copyright_text", "label": "Texto de copyright", "default": "© 2025 Raviolli Press. Todos os direitos reservados." }
  ],
  "presets": [{ "name": "Footer Raviolli Press" }]
}
{% endschema %}

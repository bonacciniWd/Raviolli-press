{% schema %}
{
  "name": "Raviolli Press Footer",
  "settings": [
    {
      "type": "text",
      "id": "company_name",
      "label": "Nome da empresa",
      "default": "Raviolli Press"
    },
    {
      "type": "text",
      "id": "company_address",
      "label": "Endereço",
      "default": "Rua das Artes, 123 - Itapema, SC"
    },
    {
      "type": "text",
      "id": "company_phone",
      "label": "Telefone",
      "default": "+55 (47) 99999-9999"
    },
    {
      "type": "text",
      "id": "company_email",
      "label": "E-mail",
      "default": "contato@raviollipress.com"
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook",
      "default": "/"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram",
      "default": "/"
    },
    {
      "type": "url",
      "id": "linkedin_url",
      "label": "LinkedIn",
      "default": "/"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Texto de copyright",
      "default": "© 2025 Raviolli Press. Todos os direitos reservados."
    }
  ],
  "presets": [
    {
      "name": "Footer Raviolli Press"
    }
  ]
}
{% endschema %}

<footer class="raviolli-footer">
  <div class="footer-container">
    <div class="footer-info">
      <h3>{{ section.settings.company_name }}</h3>
      <p>{{ section.settings.company_address }}</p>
      <p><a href="tel:{{ section.settings.company_phone }}">{{ section.settings.company_phone }}</a></p>
      <p><a href="mailto:{{ section.settings.company_email }}">{{ section.settings.company_email }}</a></p>
    </div>

    <div class="footer-social">
      <a href="{{ section.settings.facebook_url }}" target="_blank" rel="noopener">Facebook</a>
      <a href="{{ section.settings.instagram_url }}" target="_blank" rel="noopener">Instagram</a>
      <a href="{{ section.settings.linkedin_url }}" target="_blank" rel="noopener">LinkedIn</a>
    </div>
  </div>

  <div class="footer-bottom">
    <p>{{ section.settings.copyright_text }}</p>
  </div>
</footer>

<style>
.raviolli-footer {
  background-color: #1b1b1b;
  color: #f5f5f5;
  padding: 2rem 1rem;
  font-family: 'Poppins', sans-serif;
}
.footer-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  gap: 1.5rem;
  max-width: 1200px;
  margin: 0 auto;
}
.footer-info h3 {
  margin-bottom: 0.5rem;
  color: #ffffff;
}
.footer-info p, .footer-info a {
  margin: 0.25rem 0;
  color: #ccc;
  text-decoration: none;
}
.footer-social a {
  margin-right: 1rem;
  color: #f5f5f5;
  text-decoration: none;
  transition: color 0.2s ease;
}
.footer-social a:hover {
  color: #e63946;
}
.footer-bottom {
  border-top: 1px solid rgba(255, 255, 255, 0.1);
  margin-top: 1.5rem;
  padding-top: 1rem;
  text-align: center;
  font-size: 0.875rem;
  color: #aaa;
}
</style>

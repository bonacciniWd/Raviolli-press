{% schema %}
{
  "name": "Raviolli Press Footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "company_logo",
      "label": "Logo da empresa"
    },
    {
      "type": "text",
      "id": "company_address",
      "label": "Endereço",
      "default": "Rua das Artes, 123 - Itapema, SC"
    },
    {
      "type": "text",
      "id": "company_phone",
      "label": "Telefone",
      "default": "+55 (47) 99999-9999"
    },
    {
      "type": "text",
      "id": "company_email",
      "label": "E-mail",
      "default": "contato@raviollipress.com"
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook",
      "default": "/"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram",
      "default": "/"
    },
    {
      "type": "url",
      "id": "linkedin_url",
      "label": "LinkedIn",
      "default": "/"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Texto de copyright",
      "default": "© 2025 Raviolli Press. Todos os direitos reservados."
    }
  ],
  "presets": [
    {
      "name": "Footer Raviolli Press"
    }
  ]
}
{% endschema %}

<footer class="raviolli-footer" style="background-color:#1b1b1b; color:#f5f5f5; padding:2rem 1rem; font-family:'Poppins', sans-serif;">
  <div class="footer-container" style="display:flex; flex-wrap:wrap; justify-content:space-between; gap:1.5rem; max-width:1200px; margin:0 auto;">
    
    <div class="footer-info" style="flex:1 1 250px;">
      {% if section.settings.company_logo != blank %}
        <img src="{{ section.settings.company_logo | image_url: width: 200 }}" alt="Logo" style="max-width:180px; height:auto; margin-bottom:1rem;">
      {% endif %}
      <p style="margin:0.25rem 0; color:#ccc;">{{ section.settings.company_address }}</p>
      <p style="margin:0.25rem 0;"><a href="tel:{{ section.settings.company_phone }}" style="color:#ccc; text-decoration:none;">{{ section.settings.company_phone }}</a></p>
      <p style="margin:0.25rem 0;"><a href="mailto:{{ section.settings.company_email }}" style="color:#ccc; text-decoration:none;">{{ section.settings.company_email }}</a></p>
    </div>

    <div class="footer-social" style="flex:1 1 150px; text-align:right;">
      <a href="{{ section.settings.facebook_url }}" target="_blank" rel="noopener" style="margin-right:1rem; color:#f5f5f5; text-decoration:none;">Facebook</a>
      <a href="{{ section.settings.instagram_url }}" target="_blank" rel="noopener" style="margin-right:1rem; color:#f5f5f5; text-decoration:none;">Instagram</a>
      <a href="{{ section.settings.linkedin_url }}" target="_blank" rel="noopener" style="color:#f5f5f5; text-decoration:none;">LinkedIn</a>
    </div>

  </div>

  <div class="footer-bottom" style="border-top:1px solid rgba(255,255,255,0.1); margin-top:1.5rem; padding-top:1rem; text-align:center; font-size:0.875rem; color:#aaa;">
    <p style="margin:0;">{{ section.settings.copyright_text }}</p>
  </div>
</footer>

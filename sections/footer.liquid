<section id="footer-raviolli" class="py-32 bg-[#111] text-[#f2f2f2] font-[Poppins]">
  <div class="container mx-auto max-w-[1200px] flex flex-col lg:flex-row justify-between gap-10 px-4">

    <!-- Logo + Descrição + Social -->
    <div class="flex flex-col gap-6 lg:w-1/3">
      {% if section.settings.company_logo != blank %}
        <div class="flex items-center gap-3">
          <a href="/">
            <img src="{{ section.settings.company_logo | image_url: width: 100 }}" alt="Logo" class="h-10 w-auto rounded-xl" />
          </a>
          <h2 class="text-xl font-semibold">{{ section.settings.company_name }}</h2>
        </div>
      {% endif %}

      <p class="text-[#ccc] text-sm">{{ section.settings.company_description }}</p>

      <ul class="flex items-center gap-6">
        {% if section.settings.instagram_url != blank %}
          <li>
            <a href="{{ section.settings.instagram_url }}" target="_blank" rel="noopener" class="hover:text-primary transition-colors">
              <i class="fa-brands fa-instagram text-xl"></i>
            </a>
          </li>
        {% endif %}
        {% if section.settings.facebook_url != blank %}
          <li>
            <a href="{{ section.settings.facebook_url }}" target="_blank" rel="noopener" class="hover:text-primary transition-colors">
              <i class="fa-brands fa-facebook text-xl"></i>
            </a>
          </li>
        {% endif %}
        {% if section.settings.linkedin_url != blank %}
          <li>
            <a href="{{ section.settings.linkedin_url }}" target="_blank" rel="noopener" class="hover:text-primary transition-colors">
              <i class="fa-brands fa-linkedin text-xl"></i>
            </a>
          </li>
        {% endif %}
      </ul>
    </div>

    <!-- Links -->
    <div class="grid grid-cols-2 md:grid-cols-3 gap-8 lg:w-2/3">
      {% for block in section.blocks %}
        <div>
          <h3 class="mb-4 font-bold">{{ block.settings.title }}</h3>
          <ul class="text-[#ccc] space-y-2 text-sm">
            {% if block.settings.link_1_text != blank %}
              <li><a href="{{ block.settings.link_1_url }}" class="hover:text-primary transition-colors">{{ block.settings.link_1_text }}</a></li>
            {% endif %}
            {% if block.settings.link_2_text != blank %}
              <li><a href="{{ block.settings.link_2_url }}" class="hover:text-primary transition-colors">{{ block.settings.link_2_text }}</a></li>
            {% endif %}
            {% if block.settings.link_3_text != blank %}
              <li><a href="{{ block.settings.link_3_url }}" class="hover:text-primary transition-colors">{{ block.settings.link_3_text }}</a></li>
            {% endif %}
            {% if block.settings.link_4_text != blank %}
              <li><a href="{{ block.settings.link_4_url }}" class="hover:text-primary transition-colors">{{ block.settings.link_4_text }}</a></li>
            {% endif %}
          </ul>
        </div>
      {% endfor %}
    </div>
  </div>

  <div class="border-t border-gray-700 mt-12 pt-8 text-center text-xs text-gray-400">
    {{ section.settings.copyright_text }}
  </div>
</section>

{% schema %}
{
  "name": "Footer Raviolli",
  "settings": [
    { "type": "image_picker", "id": "company_logo", "label": "Logo da empresa" },
    { "type": "text", "id": "company_name", "label": "Nome da empresa", "default": "Raviolli Press" },
    { "type": "text", "id": "company_description", "label": "Descrição", "default": "A Raviolli Press cria arte, moda e identidade com propósito." },
    { "type": "url", "id": "facebook_url", "label": "Facebook", "default": "/" },
    { "type": "url", "id": "instagram_url", "label": "Instagram", "default": "/" },
    { "type": "url", "id": "linkedin_url", "label": "LinkedIn", "default": "/" },
    { "type": "text", "id": "copyright_text", "label": "Texto de copyright", "default": "© 2025 Raviolli Press. Todos os direitos reservados." }
  ],
  "blocks": [
    {
      "type": "link_group",
      "name": "Grupo de Links",
      "settings": [
        { "type": "text", "id": "title", "label": "Título do grupo", "default": "Links úteis" },
        { "type": "text", "id": "link_1_text", "label": "Texto do link 1" },
        { "type": "url", "id": "link_1_url", "label": "URL do link 1" },
        { "type": "text", "id": "link_2_text", "label": "Texto do link 2" },
        { "type": "url", "id": "link_2_url", "label": "URL do link 2" },
        { "type": "text", "id": "link_3_text", "label": "Texto do link 3" },
        { "type": "url", "id": "link_3_url", "label": "URL do link 3" },
        { "type": "text", "id": "link_4_text", "label": "Texto do link 4" },
        { "type": "url", "id": "link_4_url", "label": "URL do link 4" }
      ]
    }
  ],
  "presets": [
    { "name": "Footer Raviolli Shadcn" }
  ]
}
{% endschema %}

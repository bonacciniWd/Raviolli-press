<style>
  /* === SCHEMA DE CORES === */
  :root {
    --raviolli-bg: #ffffff;
    --raviolli-red: #c10303;
    --raviolli-text: #000000;
  }

  /* === FOOTER BASE === */
  .raviolli-footer {
    position: relative;
    border-top: 1px solid rgba(0, 0, 0, 0.08);
    background: var(--raviolli-bg);
    color: var(--raviolli-text);
    padding: 8rem 2rem 2rem;
    text-align: center;
    overflow: hidden;
    font-family: "Poppins", sans-serif;
  }

  /* --- DIVISÓRIA VERMELHA SUPERIOR --- */
  .raviolli-footer::before {
    content: "";
    position: absolute;
    top: 40px;
    left: 0;
    width: 100%;
    height: 140px;
    background: var(--raviolli-red);
    clip-path: polygon(0 70%, 100% 0, 100% 40%, 0% 100%);
    z-index: 1;
  }

  /* --- LOGO CENTRALIZADO --- */
  .footer-logo-centered {
    position: absolute;
    top: 30px;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 5;
  }

  .footer-logo-centered img {
    width: 120px;
    filter: drop-shadow(0 5px 8px rgba(0, 0, 0, 0.35));
  }

  /* --- CONTEÚDO PRINCIPAL --- */
  .footer-content {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    margin: 40px auto 0;
    max-width: 600px;
  }

  .footer-content .slogan {
    font-style: italic;
    font-size: 1.1rem;
    letter-spacing: 0.3px;
    margin-top: 3rem;
    color: var(--raviolli-text);
    opacity: 0.9;
  }

  .footer-description {
    font-size: 0.95rem;
    line-height: 1.6;
    opacity: 0.85;
    margin-top: 0.5rem;
  }

  .footer-social {
    margin-top: 1.5rem;
    display: flex;
    gap: 1.5rem;
  }

  .footer-social a {
    color: var(--raviolli-text);
    transition: transform 0.3s ease, opacity 0.3s ease;
  }

  .footer-social a:hover {
    transform: scale(1.1);
    opacity: 0.7;
  }

  .footer-copy {
    margin-top: 2rem;
    font-size: 0.85rem;
    opacity: 0.7;
  }

  /* --- RESPONSIVO --- */
  @media (max-width: 768px) {
    .footer-logo-centered img {
      width: 90px;
    }

    .raviolli-footer {
      padding-top: 7rem;
    }

    .footer-content .slogan {
      font-size: 1rem;
    }
  }
</style>


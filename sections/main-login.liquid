{{ 'customer.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Estilos para botões vermelhos e completamente arredondados */
  .customer.login button,
  .customer.login .btn,
  .customer.login input[type="submit"],
  .customer button,
  button {
    background-color: #dc2626 !important;
    color: white !important;
    border: none !important;
    border-radius: 25px !important;
    -webkit-border-radius: 25px !important;
    -moz-border-radius: 25px !important;
    padding: 12px 24px !important;
    font-size: 16px !important;
    font-weight: 500 !important;
    cursor: pointer !important;
    transition: all 0.3s ease !important;
    width: 100% !important;
    margin: 10px 0 !important;
    min-height: 48px !important;
    box-sizing: border-box !important;
  }

  .customer.login button:hover,
  .customer.login .btn:hover,
  .customer.login input[type="submit"]:hover,
  .customer button:hover,
  button:hover {
    background-color: #b91c1c !important;
    transform: translateY(-2px) !important;
    box-shadow: 0 4px 8px rgba(220, 38, 38, 0.3) !important;
  }

  .customer.login button:active,
  .customer.login .btn:active,
  .customer.login input[type="submit"]:active,
  .customer button:active,
  button:active {
    transform: translateY(0) !important;
    box-shadow: 0 2px 4px rgba(220, 38, 38, 0.3) !important;
  }

  /* Estilos para inputs completamente arredondados */
  .customer.login .field input,
  .customer.login input[type="email"],
  .customer.login input[type="password"],
  .customer.login input[type="text"],
  .customer input,
  input[type="email"],
  input[type="password"],
  input[type="text"] {
    border: 2px solid #e5e7eb !important;
    padding: 12px 16px !important;
    width: 100% !important;
    font-size: 16px !important;
    transition: border-color 0.3s ease !important;
    min-height: 48px !important;
    box-sizing: border-box !important;
    -webkit-appearance: none !important;
    -moz-appearance: none !important;
    appearance: none !important;
  }

  .customer.login .field input:focus,
  .customer.login input[type="email"]:focus,
  .customer.login input[type="password"]:focus,
  .customer.login input[type="text"]:focus,
  .customer input:focus,
  input[type="email"]:focus,
  input[type="password"]:focus,
  input[type="text"]:focus {
    border-color: #dc2626 !important;
    outline: none !important;
    box-shadow: 0 0 0 3px rgba(220, 38, 38, 0.1) !important;
  }

  /* Estilos para links */
  .customer.login a {
    color: #dc2626 !important;
    text-decoration: none !important;
    font-weight: 500 !important;
    transition: color 0.3s ease !important;
  }

  .customer.login a:hover {
    color: #b91c1c !important;
    text-decoration: underline !important;
  }

  /* Container principal */
  .customer.login {
    max-width: 400px !important;
    margin: 0 auto !important;
    padding: 20px !important;
  }

  /* Títulos */
  .customer.login h1 {
    color: #1f2937 !important;
    font-size: 28px !important;
    font-weight: 700 !important;
    margin-bottom: 20px !important;
    text-align: center !important;
  }

  .customer.login h2 {
    color: #374151 !important;
    font-size: 24px !important;
    font-weight: 600 !important;
    margin-bottom: 16px !important;
    text-align: center !important;
  }

  /* Divisor */
  .customer.login hr {
    border: none !important;
    height: 2px !important;
    background-color: #e5e7eb !important;
    margin: 30px 0 20px 0 !important;
    
  }

  /* Mensagens */
  .customer.login .form__message {
    padding: 12px 16px !important;
    border-radius: 15px !important;
    margin-bottom: 16px !important;
    text-align: center !important;
  }

  /* Campos */
  .customer.login .field {
    margin-bottom: 16px !important;
  }

  .customer.login .field label {
    display: block !important;
    margin-bottom: 4px !important;
    color: #374151 !important;
    font-weight: 500 !important;
  }

  /* Forçar exibição apenas do formulário de login */
  #recover,
  #recover + div {
    display: none !important;
  }

  #login,
  #login + div {
    display: block !important;
  }

  /* Remover qualquer border-radius conflitante */
  * {
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
  }

    /* Logo no formulário de login */
  .login-logo {
    max-width: 150px !important;
    max-height: 80px !important;
    width: auto !important;
    height: auto !important;
    display: block !important;
    margin: 0 auto 20px auto !important;
    object-fit: contain !important;
  }

  /* Ajuste do h1 para centralizar o logo */
  .customer.login h1 {
    color: #1f2937 !important;
    font-size: 28px !important;
    font-weight: 700 !important;
    margin-bottom: 20px !important;
    text-align: center !important;
    display: flex !important;
    justify-content: center !important;
    align-items: center !important;
  }

  /* Responsividade do logo */
  @media screen and (max-width: 750px) {
    .login-logo {
      max-width: 120px !important;
      max-height: 60px !important;
    }
  }
{%- endstyle -%}

{%- if section.settings.enable_shop_login_button == false -%}
  {%- assign hide_shop_login_button = true -%}
{%- endif -%}

<div class="customer login section-{{ section.id }}-padding">
  <h1 id="recover" tabindex="-1">
    {{ 'customer.recover_password.title' | t }}
  </h1>
  <div>
    <p>
      {{ 'customer.recover_password.subtext' | t }}
    </p>

    {%- form 'recover_customer_password' -%}
      {% assign recover_success = form.posted_successfully? %}
      <div class="field">
        <input
          type="email"
          value=""
          name="email"
          id="RecoverEmail"
          autocorrect="off"
          autocapitalize="off"
          autocomplete="email"
          {% if form.errors %}
            aria-invalid="true"
            aria-describedby="RecoverEmail-email-error"
            autofocus
          {% endif %}
          placeholder="{{ 'customer.login_page.email' | t }}"
        >
        <label for="RecoverEmail">
          {{ 'customer.login_page.email' | t }}
        </label>
      </div>
      {%- if form.errors -%}
        <small id="RecoverEmail-email-error" class="form__message">
          <span class="svg-wrapper">
            {{- 'icon-error.svg' | inline_asset_content -}}
          </span>
          {{ form.errors.messages.form }}
        </small>
      {%- endif -%}

      <button>
        {{ 'customer.login_page.submit' | t }}
      </button>

      <a href="#login">
        {{ 'customer.login_page.cancel' | t }}
      </a>
    {%- endform -%}
  </div>

  <h1 id="login" tabindex="-1">
    <lottie-player 
      class="login-lottie"
      src="{{ 'login-animation.json' | asset_url }}"
      background="transparent"
      speed="1"
      loop
      autoplay>
    </lottie-player>
  </h1>
  <div>
    {%- if recover_success == true -%}
      <h3 class="form__message" tabindex="-1" autofocus>
        <span class="svg-wrapper">
          {{- 'icon-success.svg' | inline_asset_content -}}
        </span>
        {{ 'customer.recover_password.success' | t }}
      </h3>
    {%- endif -%}
    {%- form 'customer_login', novalidate: 'novalidate' -%}

      {%- if shop.features.login_with_shop_classic_customer_accounts? -%}
        <section name="sign-in-with-shop-provider">
          {{ shop | login_button: hide_button: hide_shop_login_button }}

          {%- unless hide_shop_login_button -%}
            <p>
              {{ 'customer.login_page.alternate_provider_separator' | t }}
            </p>
          {%- endunless -%}
        </section>
      {%- endif -%}

      <div class="field">
        <input
          type="email"
          name="customer[email]"
          id="CustomerEmail"
          autocomplete="email"
          autocorrect="off"
          autocapitalize="off"
          {% if form.errors contains 'form' %}
            aria-invalid="true"
          {% endif %}
          placeholder="{{ 'customer.login_page.email' | t }}"
        >
        <label for="CustomerEmail">
          {{ 'customer.login_page.email' | t }}
        </label>
      </div>

      {%- if form.password_needed -%}
        <div class="field">
          <input
            type="password"
            value=""
            name="customer[password]"
            id="CustomerPassword"
            autocomplete="current-password"
            {% if form.errors contains 'form' %}
              aria-invalid="true"
            {% endif %}
            placeholder="{{ 'customer.login_page.password' | t }}"
          >
          <label for="CustomerPassword">
            {{ 'customer.login_page.password' | t }}
          </label>
        </div>

        <a href="#recover">
          {{ 'customer.login_page.forgot_password' | t }}
        </a>
      {%- endif -%}

      <button>
        {{ 'customer.login_page.sign_in' | t }}
      </button>

      <a href="{{ routes.account_register_url }}">
        {{ 'customer.login_page.create_account' | t }}
      </a>
    {%- endform -%}
  </div>

  {%- if shop.checkout.guest_login -%}
    <div>
      <hr>
      <h2>{{ 'customer.login_page.guest_title' | t }}</h2>

      {%- form 'guest_login' -%}
        <button>
          {{ 'customer.login_page.guest_continue' | t }}
        </button>
      {%- endform -%}
    </div>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "t:sections.main-login.name",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_shop_login_button",
      "label": "t:sections.main-login.shop_login_button.enable",
      "default": true
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
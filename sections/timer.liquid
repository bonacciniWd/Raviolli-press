{% comment %}
Countdown funcional configurável no editor Shopify.
Você pode definir a data e hora finais do contador.
{% endcomment %}

<section id="countdown-section" class="countdown-container">
  <div class="container">
    <div class="time-box">
      <span id="days">00</span>
      <small>Dia</small>
    </div>
    <div class="time-box">
      <span id="hours">00</span>
      <small>Horas</small>
    </div>
    <div class="time-box">
      <span id="minutes">00</span>
      <small>Minutos</small>
    </div>
    <div class="time-box">
      <span id="seconds">00</span>
      <small>Segundos</small>
    </div>
  </div>
</section>

<style>
.countdown-container {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60px 0;
  background: radial-gradient(circle at center, #111 0%, #000 100%);
  color: #fff;
  font-family: Helvetica, Arial, sans-serif;
  min-height: 100vh;
  overflow: hidden;
}

/* ======= EFEITO LUX GIRATÓRIO ATRÁS DE TUDO ======= */
.countdown-container::before {
  content: "";
  position: absolute;
  width: 200%;
  height: 200%;
  top: -50%;
  left: -50%;
  background-image: linear-gradient(var(--rotate), #5ddcff, #3c67e3 43%, #4e00c2);
  filter: blur(80px);
  opacity: 0.6;
  z-index: 0;
  animation: spin 6s linear infinite;
}

@keyframes spin {
  0% { --rotate: 0deg; }
  100% { --rotate: 360deg; }
}

/* ======= CONTEÚDO ======= */
.countdown-container .container {
  display: flex;
  flex-wrap: wrap;
  gap: 25px;
  position: relative;
  z-index: 1; /* conteúdo acima da luz */
}

.time-box {
  text-align: center;
  background: rgba(25, 25, 25, 0.85);
  border-radius: 10px;
  padding: 20px 30px;
  box-shadow: 0 0 20px rgba(0,0,0,0.6);
}

.time-box span {
  display: block;
  font-size: 64px;
  font-weight: bold;
  color: #fff;
}

.time-box small {
  display: block;
  margin-top: 10px;
  font-size: 14px;
  color: #ccc;
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function() {
  // Pega os valores definidos no editor
  const targetDate = "{{ section.settings.target_date }}";
  const targetTime = "{{ section.settings.target_time }}";

  // Monta a data final combinando data e hora
  const target = new Date(`${targetDate}T${targetTime}:00`);

  const daysEl = document.getElementById("days");
  const hoursEl = document.getElementById("hours");
  const minutesEl = document.getElementById("minutes");
  const secondsEl = document.getElementById("seconds");

  function updateCountdown() {
    const now = new Date().getTime();
    const distance = target.getTime() - now;

    if (distance <= 0) {
      daysEl.textContent = "00";
      hoursEl.textContent = "00";
      minutesEl.textContent = "00";
      secondsEl.textContent = "00";
      return;
    }

    const days = Math.floor(distance / (1000 * 60 * 60 * 24));
    const hours = Math.floor((distance / (1000 * 60 * 60)) % 24);
    const minutes = Math.floor((distance / (1000 * 60)) % 60);
    const seconds = Math.floor((distance / 1000) % 60);

    daysEl.textContent = String(days).padStart(2, "0");
    hoursEl.textContent = String(hours).padStart(2, "0");
    minutesEl.textContent = String(minutes).padStart(2, "0");
    secondsEl.textContent = String(seconds).padStart(2, "0");
  }

  updateCountdown();
  setInterval(updateCountdown, 1000);
});
</script>

{% schema %}
{
  "name": "Countdown Timer",
  "settings": [
    {
      "type": "header",
      "content": "Configurações do Countdown"
    },
    {
      "type": "text",
      "id": "target_date",
      "label": "Data final (AAAA-MM-DD)",
      "default": "2025-11-08"
    },
    {
      "type": "text",
      "id": "target_time",
      "label": "Hora final (HH:MM no formato 24h)",
      "default": "15:00"
    }
  ],
  "presets": [
    {
      "name": "Countdown Timer"
    }
  ]
}
{% endschema %}

{% comment %}
Countdown funcional com fundo LUX animado por trás dos cards.
{% endcomment %}

<section id="countdown-section" class="countdown-container">
  <div class="lux-background"></div>

  <div class="container">
    <div class="time-box">
      <span id="days">00</span>
      <small>Dia</small>
    </div>
    <div class="time-box">
      <span id="hours">00</span>
      <small>Horas</small>
    </div>
    <div class="time-box">
      <span id="minutes">00</span>
      <small>Minutos</small>
    </div>
    <div class="time-box">
      <span id="seconds">00</span>
      <small>Segundos</small>
    </div>
  </div>
</section>

<style>
/* ======== CONTAINER ======== */
.countdown-container {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 80px 0;
  min-height: 100vh;
  overflow: hidden;
  color: #fff;
  font-family: Helvetica, Arial, sans-serif;
  background: #0a0a0a;
  z-index: 1;
}

/* ======== FUNDO LUX (gradiente animado atrás dos cards) ======== */
.lux-background {
  position: absolute;
  inset: 0;
  z-index: 0;
  filter: blur(120px);
  opacity: 0.6;
  background-image: linear-gradient(
    var(--rotate),
    #ff7eb3,
    #3c67e3 43%,
    #4e00c2
  );
  animation: spin 8s linear infinite;
}

@keyframes spin {
  0% {
    --rotate: 0deg;
  }
  100% {
    --rotate: 360deg;
  }
}

/* ======== CONTEÚDO ======== */
.container {
  display: flex;
  flex-wrap: wrap;
  gap: 30px;
  z-index: 1;
}

.time-box {
  text-align: center;
}

.time-box span {
  display: block;
  font-size: 64px;
  font-weight: bold;
  background: rgba(25, 28, 41, 0.85);
  padding: 25px 40px;
  border-radius: 12px;
  box-shadow: 0 4px 25px rgba(0, 0, 0, 0.5);
  color: rgb(88, 199, 250);
  animation: glow 2s ease-in-out infinite;
  backdrop-filter: blur(6px);
}

.time-box small {
  display: block;
  margin-top: 10px;
  font-size: 14px;
  color: #ccc;
}

/* ======== BRILHO SUAVE NO TEXTO ======== */
@keyframes glow {
  0% {
    text-shadow: 0 0 5px rgba(88, 199, 250, 0.2),
      0 0 10px rgba(88, 199, 250, 0.3);
  }
  50% {
    text-shadow: 0 0 20px rgba(88, 199, 250, 0.7),
      0 0 35px rgba(88, 199, 250, 0.9);
  }
  100% {
    text-shadow: 0 0 5px rgba(88, 199, 250, 0.2),
      0 0 10px rgba(88, 199, 250, 0.3);
  }
}

/* ======== RESPONSIVO ======== */
@media (max-width: 768px) {
  .time-box span {
    font-size: 42px;
    padding: 15px 25px;
  }
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function() {
  const targetDate = "{{ section.settings.target_date }}";
  const targetTime = "{{ section.settings.target_time }}";
  const target = new Date(`${targetDate}T${targetTime}:00`);

  const daysEl = document.getElementById("days");
  const hoursEl = document.getElementById("hours");
  const minutesEl = document.getElementById("minutes");
  const secondsEl = document.getElementById("seconds");

  function updateCountdown() {
    const now = new Date().getTime();
    const distance = target.getTime() - now;

    if (distance <= 0) {
      daysEl.textContent = "00";
      hoursEl.textContent = "00";
      minutesEl.textContent = "00";
      secondsEl.textContent = "00";
      return;
    }

    const days = Math.floor(distance / (1000 * 60 * 60 * 24));
    const hours = Math.floor((distance / (1000 * 60 * 60)) % 24);
    const minutes = Math.floor((distance / (1000 * 60)) % 60);
    const seconds = Math.floor((distance / 1000) % 60);

    daysEl.textContent = String(days).padStart(2, "0");
    hoursEl.textContent = String(hours).padStart(2, "0");
    minutesEl.textContent = String(minutes).padStart(2, "0");
    secondsEl.textContent = String(seconds).padStart(2, "0");
  }

  updateCountdown();
  setInterval(updateCountdown, 1000);
});
</script>

{% schema %}
{
  "name": "Countdown Timer Lux",
  "settings": [
    {
      "type": "header",
      "content": "Configurações do Countdown"
    },
    {
      "type": "text",
      "id": "target_date",
      "label": "Data final (AAAA-MM-DD)",
      "default": "2025-11-08"
    },
    {
      "type": "text",
      "id": "target_time",
      "label": "Hora final (HH:MM no formato 24h)",
      "default": "15:00"
    }
  ],
  "presets": [
    {
      "name": "Countdown Timer Lux"
    }
  ]
}
{% endschema %}
